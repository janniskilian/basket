<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Basket.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryVariant">@color/brand_green_dark</item>
        <item name="colorPrimaryDark">@color/brand_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorSecondary">@color/brand_yellow</item>
        <item name="colorSecondaryVariant">@color/brand_yellow_dark</item>
        <item name="colorOnSecondary">@android:color/primary_text_light</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Basket.Headline1</item>

        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Basket.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Basket.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Basket.LargeComponent
        </item>

        <item name="bottomSheetDialogTheme">@style/Theme.Basket.BottomSheetDialog</item>

        <item name="actionOverflowButtonStyle">@style/Widget.Basket.ActionButton.Overflow</item>
        <item name="checkboxStyle">@style/Widget.Basket.Checkbox</item>
    </style>

    <style name="Theme.Basket.DayNight" parent="Theme.Basket.Base">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="ThemeOverlay.Basket.DayNight" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Theme.Basket.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryDark">@color/brand_green_dark</item>
        <item name="colorSecondary">@color/brand_yellow</item>
        <item name="colorSecondaryVariant">@color/brand_yellow_dark</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>

        <item name="bottomSheetStyle">@style/Widget.Basket.BottomSheet</item>
    </style>

    <style name="Theme.Basket.TransparentHighlight" parent="Theme.Basket.DayNight">
        <item name="colorControlHighlight">@color/transparent</item>
    </style>

</resources>
