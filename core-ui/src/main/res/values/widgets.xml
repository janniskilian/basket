<resources>

    <style name="Widget.Basket" parent="android:Widget"/>

    <style name="Widget.Basket.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="liftOnScroll">true</item>
    </style>

    <style name="Widget.Basket.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="Widget.Basket.Toolbar.NoScroll">
        <item name="layout_scrollFlags">noScroll</item>
    </style>

    <style name="Widget.Basket.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="Widget.Basket.LeadImage">
        <item name="android:layout_width">@dimen/lead_image_size</item>
        <item name="android:layout_height">@dimen/lead_image_size</item>
        <item name="tint">@color/on_surface_10</item>
    </style>

    <style name="Widget.Basket.EmptyHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/three</item>
        <item name="android:layout_marginStart">@dimen/two</item>
        <item name="android:layout_marginEnd">@dimen/two</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="layout_constraintWidth_max">@dimen/empty_text_max_width</item>
    </style>

    <style name="Widget.Basket.EmptyInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/one</item>
        <item name="android:layout_marginStart">@dimen/two</item>
        <item name="android:layout_marginEnd">@dimen/two</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="layout_constraintWidth_max">@dimen/empty_text_max_width</item>
    </style>

    <style name="Widget.Basket.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">6dp</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="Widget.Basket.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="rippleColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Basket.IconButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:layout_width">@dimen/increment</item>
        <item name="android:layout_height">@dimen/increment</item>
        <item name="tint">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.Basket.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_height">@dimen/five</item>
    </style>

    <style name="Widget.Basket.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.Basket.NavigationView">
        <item name="android:background">@color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingStart">@dimen/one</item>
        <item name="android:paddingEnd">@dimen/one</item>
        <item name="android:theme">@style/Theme.Basket.TransparentHighlight</item>
        <item name="elevation">0dp</item>
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/one</item>
        <item name="itemIconPadding">@dimen/three</item>
        <item name="itemIconTint">@color/navigation_item_icon_color</item>
        <item name="itemTextColor">@color/navigation_item_text_color</item>
    </style>

    <style name="Widget.Basket.CenteredHeadline" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/two</item>
        <item name="android:layout_marginEnd">@dimen/two</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
